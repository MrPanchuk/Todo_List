<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
  <div class="row">
    <div class="col-md-2">
      <%= link_to image_tag("united_kingdom_640.png"), '?locale=en' %>
      <%= link_to image_tag("ukraine.png"), '?locale=ua' %>
    </div>
    <div class="col-md-8"><p></p></div>
    <div class="col-md-2">
      <% if signed_in?%>
        <%= current_user.email%>
        <%= link_to "#{t :sign_out}", destroy_user_session_path, class: "btn btn-primary", method: :delete %><br>
      <%end%>
    </div>
  </div>
  <%= yield %>

</body>
</html>
