<h2><%= I18n.t 'login' %></h2>

<div class="row">
  <div class="col-md-5"><p></p></div>
  <div class="col-md-2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label I18n.t 'email' %><br>
        <%= f.email_field :email, autofocus: true, class: "form-control"%>
      </div>
      <br>
      <div class="field">
        <%= f.label I18n.t 'pass' %><br>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <br>
        <%= f.submit "#{t :login}", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<br>

<%= I18n.t 'new_to_todo' %>
<%= link_to "#{t :create_acc}", new_registration_path(resource_name) %><br>
